<Window x:Class="Pizza2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid x:Name="PizzaSelect">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Text="here are your pizzas you fucking fat slob"  Margin="1" TextAlignment="Center"/>
            <ScrollViewer Margin="3" VerticalAlignment="Top" Grid.Row="1">
                <StackPanel>
                    <ItemsControl x:Name="pizlist" ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:Pizza}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Name}"/>
                                    <Button Click="RemovePizza" Content="🗙" Height="10" Width="10"></Button>
                                    <Button Click="EditPizza" Content="aaaa" Height="30" Width="30"></Button>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Click="AcceptPizza" Content="+" Height="25" Width="50" HorizontalAlignment="Left"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>




        <Grid x:Name="EditPizzaMenu">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Text="ooga booga editing pizza"  Margin="1" TextAlignment="Center"/>
            <ScrollViewer Margin="3" VerticalAlignment="Top" Grid.Row="1">
                <StackPanel>
                    <TextBlock Text="bread"/>
                    <ItemsControl x:Name="thepiz" ItemsSource="{Binding}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:Pizza}">
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <TextBlock Text="cheez"/>


                        <TextBlock Text="that there stuff that goes on top"/>
                        
                        
                    </ItemsControl>
                    <Button Click="AcceptPizza" Content="✓" Height="25" Width="50"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
